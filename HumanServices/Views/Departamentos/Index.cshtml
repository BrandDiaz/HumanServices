@model IEnumerable<HumanServices.Models.Departamentos>

@{
    ViewBag.Title = "Departamentos";
}

<h2>Departamentos</h2>

<p>
    @Html.ActionLink("Añadir Nuevo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CodigoDepart)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CodigoDepart)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nombre)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.DepartamentoId }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.DepartamentoId }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.DepartamentoId })
        </td>
    </tr>
}

</table>
