@model IEnumerable<HumanServices.Models.Cargos>

@{
    ViewBag.Title = "Cargos";
}

<h2>Cargos</h2>

<p>
    @Html.ActionLink("Añadir nuevo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Cargo)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Cargo)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.CargoId }) |
