@model IEnumerable<HumanServices.Models.Nomina>

@{
    ViewBag.Title = "FiltroNomina";
}

<h2>Nomina por Año/Mes</h2>

<p>
<p>

    <form class="" action="/Nominas/FiltroNomina" method="post">

        Busqueda: @Html.TextBox("Fecha", "", new { placeholder = "Ingrese el numero" })<br\>
            <input type="submit" name="" value="Buscar">
    </form>
</p>
</p>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Empleados.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Fecha)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NominaTotal)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Empleados.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fecha)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NominaTotal)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.NominaId }) |
                @Html.ActionLink("Details", "Details", new { id = item.NominaId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.NominaId })
            </td>
        </tr>
    }

</table>
